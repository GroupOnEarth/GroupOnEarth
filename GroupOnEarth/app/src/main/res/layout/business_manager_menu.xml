<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/primary_material_light"
    android:backgroundTint="#000000"
    android:orientation="vertical"
    tools:context="com.grouponearth.avi.grouponearth.PresentationLayer.BusinessManagerMenu">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scrollHorizontally="false"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:id="@+id/txtHeader"
        android:text="Hello Manager"
        android:gravity="center"
        android:typeface="serif"/>



    <RelativeLayout
        android:layout_width="363dp"
        android:layout_height="342dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Purchased\nCoupons"
            android:id="@+id/btnPurchased"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:textSize="15sp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClick" />

        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Edit Business\nProfile"
            android:id="@+id/btnEdit"
            android:layout_alignTop="@+id/btnPurchased"
            android:layout_toRightOf="@+id/btnPurchased"
            android:layout_toEndOf="@+id/btnPurchased"
            android:textSize="15sp"
            android:typeface="serif"
            android:onClick="onClick" />

        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Coupons\nRatings"
            android:id="@+id/btnRatings"
            android:layout_below="@+id/btnPurchased"
            android:layout_toLeftOf="@+id/btnEdit"
            android:layout_toStartOf="@+id/btnEdit"
            android:textSize="14sp"
            android:typeface="serif"
            android:onClick="onClick" />

        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Add New\nCoupon"
            android:id="@+id/btnAdd"
            android:textSize="15sp"
            android:typeface="serif"
            android:layout_above="@+id/btnMngUsers"
            android:layout_alignLeft="@+id/btnEdit"
            android:layout_alignStart="@+id/btnEdit"
            android:layout_alignBottom="@id/btnRatings"
            android:onClick="onClick" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Logout"
            android:id="@+id/btnLogout"
            android:layout_gravity="right"
            android:color="#55000000"
            android:alpha="0.5"
            android:textColor="#FFFFFF"


            android:onClick="onClick" />
    </LinearLayout>



</LinearLayout>