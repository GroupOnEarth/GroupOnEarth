<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/cat_background"
    tools:context="com.grouponearth.avi.grouponearth.PresentationLayer.CouponPage">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:text="Coupon Name"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:id="@+id/txtHeader" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Coupon Description:\n"
                android:textSize="20sp"
                android:id="@+id/txtDesc"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Price: "
                    android:textSize="25sp"
                    android:gravity="top"
                    android:id="@+id/txtPrice"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:text="Discount Price: "
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtDPrice"
                    android:textColor="@color/white"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Bought: "
                    android:textSize="15sp"
                    android:gravity="start"
                    android:id="@+id/txtBought"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:text="Expiration Date: "
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtExpDate"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Business Name: "
                android:textSize="20sp"
                android:id="@+id/txtBName"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="20sp"
                android:id="@+id/txtAddress"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Coupon's Rating"
                android:typeface="serif"
                android:textSize="20sp"
                android:textColor="#DAA520"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:id="@+id/ratingBar"
                android:background="@color/white"
                android:isIndicator="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Buy Now!"
                android:id="@+id/btnBuy"
                android:onClick="onClick"
                android:textColor="@color/black"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
