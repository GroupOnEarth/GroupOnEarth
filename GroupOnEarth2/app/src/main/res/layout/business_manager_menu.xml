<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/manage"
    android:orientation="vertical"

    tools:context="com.grouponearth.avi.grouponearth.PresentationLayer.BusinessManagerMenu">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:id="@+id/txtHeader"
        android:text="Hello Manager"
        android:gravity="center"
        android:typeface="serif"/>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Edit Business\nProfile"
            android:layout_gravity="center_horizontal"
            android:id="@+id/business_btnEdit"
            android:textSize="15sp"
            android:typeface="serif"
            android:onClick="onClick" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="48dp"
            android:text="Our\nCoupons"
            android:id="@+id/btnOurCoupons"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:typeface="serif"
            android:onClick="onClick" />

        <Button
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="Add New\nCoupon"
            android:id="@+id/btnAddCoupon"
            android:textSize="15sp"
            android:typeface="serif"
            android:onClick="onClick" />

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/btnLogout"
            android:layout_gravity="right"
            android:alpha="0.5"
            android:layout_marginTop="120dp"
            android:textColor="@color/black"

            android:onClick="onClick" />




</LinearLayout>